
<VirtualHost *:80>

	ServerName site.dev
	DocumentRoot "/var/www"

	<Directory "/var/www/">

        Options Indexes MultiViews FollowSymLinks

        AllowOverride None

        Order deny,allow

        Deny from all

        Allow from 127.0.0.0/255.0.0.0 ::1/128

    </Directory>

	ErrorLog "/var/www/apache-error.log"
	CustomLog "/var/www/apache-access.log" combined

</VirtualHost>

<VirtualHost *:8080>

    ServerName site.dev
	DocumentRoot "/var/www"

	<Directory "/var/www/">

        Options Indexes MultiViews FollowSymLinks

        AllowOverride None

        Order deny,allow

        Deny from all

        Allow from 127.0.0.0/255.0.0.0 ::1/128

    </Directory>

	ErrorLog "/var/www/apache-error.log"
	CustomLog "/var/www/apache-access.log" combined

</VirtualHost>
